{% extends 'base.html.twig' %}

{% block title %}Documentos{% endblock %}

{% block page_title %}
    Documentos
{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="panel-content">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nombre</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for documento in documentos %}
                                    <tr>
                                        <td>{{ documento.idCodumento }}</td>
                                        <td>{{ documento.nombreDocumento }}</td>
                                        <td>
                                            <a class="btn btn-info" href="{{ path('documento_show', {'idCodumento': documento.idCodumento}) }}">
                                                <i class="fas fa-search-plus"></i>
                                            </a>
                                            <a class="btn btn-info" href="{{ path('documento_edit', {'idCodumento': documento.idCodumento}) }}">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3">No se encontraron registros.</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <a class="btn btn-primary" href="{{ path('documento_new') }}">Agregar Nuevo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
