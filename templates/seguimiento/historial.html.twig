{% extends 'base.html.twig' %}

{% block title %}Seguimiento{% endblock %}

{% block page_title %}
    Historial
{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="panel-content">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Fecha de Envio</th>
                                        <th>Tipo de Correo</th>
                                        <th>Usuario</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% set count = 1 %}
                                {% for correo in correos %}
                                    <tr>
                                        <td>{{ count }}</td>
                                        <td>{{ correo.fechaSeguimiento|date("d/m/Y") }}</td>
                                        <td>{{ correo.tipoCorreo.nombreTipoCorreo }}</td>
                                        <td>{{ correo.idUser.username }}</td>
                                    </tr>
                                    {% set count = count+1 %}
                                {% else %}
                                    <tr>
                                        <td colspan="5">No se encontraron registros.</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <a class="btn btn-primary" href="{{ path('seguimiento_new', {'matricula': alumno.matricula}) }}">
                            Agregar Seguimiento
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts_page %}
    <script type="text/javascript">
        $(document).ready(function(){
            $('#seguimiento').addClass('active');
        });
    </script>
{% endblock %}