{% extends 'base.html.twig' %}

{% block title %}Nivel Académico{% endblock %}

{% block page_title %}
    Detalle Nivel Académico
{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block page_content %}
    <div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="panel-content">
						<div class="table-responsive">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ nivel_academico.idNivelAcademico }}</td>
                                    </tr>
                                    <tr>
                                        <th>Nombre</th>
                                        <td>{{ nivel_academico.nombreNivelAcademico }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <a class="btn btn-info" href="{{ path('nivel_academico_index') }}">
                            <span>
                                <i class="fas fa-list"></i>
                            </span>
                            <span>
                                Ver todos
                            </span>
                        </a>
    
                        <a class="btn btn-info" href="{{ path('nivel_academico_edit', {'idNivelAcademico': nivel_academico.idNivelAcademico}) }}">
                            <span>
                                <i class="fas fa-edit"></i>
                            </span>
                            <span>
                                Editar
                            </span>
                        </a>
                        <br/>
                        {{ include('nivel_academico/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts_page %}
    <script type="text/javascript">
        $(document).ready(function(){
            $('#catalogos').addClass('active treeview menu-open');
            $('#nivelAcademico').addClass('active');
        });
    </script>
{% endblock %}