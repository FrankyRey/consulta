{% extends 'base.html.twig' %}

{% block title %}Detalle Pago{% endblock %}

{% block page_title %}
    Detalle Pago
{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block page_content %}
    <div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="panel-content">
						<div class="table-responsive">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ pago.idPago }}</td>
                                    </tr>
                                    <tr>
                                        <th>Cnatidad</th>
                                        <td>{{ pago.cantidad }}</td>
                                    </tr>
                                    <tr>
                                        <th>Fecha de Pago</th>
                                        <td>{{ pago.fechaPago|date("d/m/Y")  }}</td>
                                    </tr>
                                    <tr>
                                        <th>Concepto</th>
                                        <td>{{ pago.idConcepto.nombreConceptoPago }}</td>
                                    </tr>
                                    <tr>
                                        <th>Mes (cuando corresponda</th>
                                        <td>{{ pago.mes }}</td>
                                    </tr>
                                    <tr>
                                        <th>AÃ±o</th>
                                        <td>{{ pago.anio }}</td>
                                    </tr>
                                    <tr>
                                        <th>Usuario que capturo el pago</th>
                                        <td>{{ pago.idUser.username }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <a class="btn btn-info" href="{{ path('pago_historial', { 'matricula': alumno.matricula}) }}">
                            <span>
                                <i class="fas fa-list"></i>
                            </span>
                            <span>
                                Ver todos
                            </span>
                        </a>
    
                        <a class="btn btn-info" href="{{ path('pago_edit', {'matricula': alumno.matricula, 'idPago': pago.idPago}) }}">
                            <span>
                                <i class="fas fa-edit"></i>
                            </span>
                            <span>
                                Editar
                            </span>
                        </a>
                        <br/>
                        {{ include('pagos/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts_page %}
    <script type="text/javascript">
        $(document).ready(function(){
            $('#pagos').addClass('active');
        });
    </script>
{% endblock %}