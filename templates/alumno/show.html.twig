{% extends 'base.html.twig' %}

{% block title %}Alumno{% endblock %}

{% block page_title %}
    Detalle Alumno
{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="panel-content">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>Matricula</th>
                                        <td>{{ alumno.matricula }}</td>
                                    </tr>
                                    <tr>
                                        <th>ApellidoPaterno</th>
                                        <td>{{ alumno.apellidoPaterno }}</td>
                                    </tr>
                                    <tr>
                                        <th>ApellidoMaterno</th>
                                        <td>{{ alumno.apellidoMaterno }}</td>
                                    </tr>
                                    <tr>
                                        <th>Nombre</th>
                                        <td>{{ alumno.nombre }}</td>
                                    </tr>
                                    <tr>
                                        <th>Curp</th>
                                        <td>{{ alumno.curp }}</td>
                                    </tr>
                                    <tr>
                                        <th>Edad</th>
                                        <td>{{ alumno.edad }}</td>
                                    </tr>
                                    <tr>
                                        <th>FechaNacimiento</th>
                                        <td>{{ alumno.fechaNacimiento ? alumno.fechaNacimiento|date('Y-m-d') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Sexo</th>
                                        <td>{{ alumno.sexo }}</td>
                                    </tr>
                                    <tr>
                                        <th>CorreoElectronico</th>
                                        <td>{{ alumno.correoElectronico }}</td>
                                    </tr>
                                    <tr>
                                        <th>TelefonoFijo</th>
                                        <td>{{ alumno.telefonoFijo }}</td>
                                    </tr>
                                    <tr>
                                        <th>TelefonoCelular</th>
                                        <td>{{ alumno.telefonoCelular }}</td>
                                    </tr>
                                    <tr>
                                        <th>FechaAlta</th>
                                        <td>{{ alumno.fechaAlta ? alumno.fechaAlta|date('Y-m-d') : '' }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <a class="btn btn-info" href="{{ path('alumno_index') }}">
                            <span>
                                <i class="fas fa-list"></i>
                            </span>
                            <span>
                                Ver todos
                            </span>
                        </a>
    
                        <a class="btn btn-info" href="{{ path('alumno_edit', {'matricula': alumno.matricula}) }}">
                            <span>
                                <i class="fas fa-edit"></i>
                            </span>
                            <span>
                                Editar
                            </span>
                        </a>
                        <br/>

                        {{ include('alumno/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts_page %}
    <script type="text/javascript">
        $(document).ready(function(){
            $('#alumno').addClass('active');
        });
    </script>
{% endblock %}