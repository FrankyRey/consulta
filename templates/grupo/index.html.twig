{% extends 'base.html.twig' %}

{% block title %}Grupos Académicos{% endblock %}

{% block page_title %}
    Grupos Académicos
{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="panel-content">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Semestre</th>
                                        <th>Grupo</th>
                                        <th>Nivel Académico</th>
                                        <th>Oferta Académica</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for grupo in grupos %}
                                    <tr>
                                        <td>{{ grupo.idGrupo }}</td>
                                        <td>{{ grupo.semestre }}</td>
                                        <td>{{ grupo.grupo }}</td>
                                        <td>{{ grupo.idNivelAcademico.nombreNivelAcademico }}</td>
                                        <td>{{ grupo.idOfertaAcademica.nombreOfertaAcademica }}</td>
                                        <td>
                                            <a class="btn btn-info" href="{{ path('grupo_show', {'idGrupo': grupo.idGrupo}) }}">
                                                <i class="fas fa-search-plus"></i>
                                            </a>
                                            <a class="btn btn-info" href="{{ path('grupo_edit', {'idGrupo': grupo.idGrupo}) }}">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">No se encontraron registros.</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <a class="btn btn-primary" href="{{ path('grupo_new') }}">Agregar nuevo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
