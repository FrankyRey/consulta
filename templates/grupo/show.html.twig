{% extends 'base.html.twig' %}

{% block title %}Grupos Académicos{% endblock %}

{% block page_title %}
    Detalle Grupo Académico
{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="panel-content">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ grupo.idGrupo }}</td>
                                    </tr>
                                    <tr>
                                        <th>Semestre</th>
                                        <td>{{ grupo.semestre }}</td>
                                    </tr>
                                    <tr>
                                        <th>Grupo</th>
                                        <td>{{ grupo.grupo }}</td>
                                    </tr>
                                    <tr>
                                        <th>Nivel Académico</th>
                                        <td>{{ grupo.idNivelAcademico.nombreNivelAcademico }}</td>
                                    </tr>
                                    <tr>
                                        <th>Oferta Académica</th>
                                        <td>{{ grupo.idOfertaAcademica.nombreOfertaAcademica }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <a class="btn btn-info" href="{{ path('grupo_index') }}">
                            <span>
                                <i class="fas fa-list"></i>
                            </span>
                            <span>
                                Ver todos
                            </span>
                        </a>
    
                        <a class="btn btn-info" href="{{ path('grupo_edit', {'idGrupo': grupo.idGrupo}) }}">
                            <span>
                                <i class="fas fa-edit"></i>
                            </span>
                            <span>
                                Editar
                            </span>
                        </a>
                        <br/>
                        {{ include('grupo/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts_page %}
    <script type="text/javascript">
        $(document).ready(function(){
            $('#grupos').addClass('active');
        });
    </script>
{% endblock %}
