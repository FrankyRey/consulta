{% extends 'base.html.twig' %}

{% block title %}Oferta Académica{% endblock %}

{% block page_title %}
    Oferta Académica
{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block page_content %}
    <div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="panel-content">
						<div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Oferta Académica</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for oferta_academica in oferta_academicas %}
                                    <tr>
                                        <td>{{ oferta_academica.idOfertaAcademica }}</td>
                                        <td>{{ oferta_academica.nombreOfertaAcademica }}</td>
                                        <td>
                                            <a class="btn btn-info" href="{{ path('oferta_academica_show', {'idOfertaAcademica': oferta_academica.idOfertaAcademica}) }}">
                                                <i class="fas fa-search-plus"></i>
                                            </a>
                                            <a class="btn btn-info" href="{{ path('oferta_academica_edit', {'idOfertaAcademica': oferta_academica.idOfertaAcademica}) }}">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3">No se encontraron registros.</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <a class="btn btn-primary" href="{{ path('oferta_academica_new') }}">Agregar Nueva</a>
                    </div>
                </div>
            </div>
        </div>
    </div>  
{% endblock %}
